<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="15" guiShape="passenger"/>

    <!-- North approach routes -->
    <route id="route_NS" edges="N2C C2S"/> <!-- North to South (straight) -->
    <route id="route_NE" edges="N2C C2E"/> <!-- North to East (right) -->
    <route id="route_NW" edges="N2C C2W"/> <!-- North to West (left) -->

    <!-- South approach routes -->
    <route id="route_SN" edges="S2C C2N"/> <!-- South to North (straight) -->
    <route id="route_SE" edges="S2C C2E"/> <!-- South to East (left) -->
    <route id="route_SW" edges="S2C C2W"/> <!-- South to Right (right) -->

    <!-- East approach routes -->
    <route id="route_EW" edges="E2C C2W"/> <!-- East to West (straight) -->
    <route id="route_EN" edges="E2C C2N"/> <!-- East to North (left) -->
    <route id="route_ES" edges="E2C C2S"/> <!-- East to South (right) -->

    <!-- West approach routes -->
    <route id="route_WE" edges="W2C C2E"/> <!-- West to East (straight) -->
    <route id="route_WN" edges="W2C C2N"/> <!-- West to North (right) -->
    <route id="route_WS" edges="W2C C2S"/> <!-- West to South (left) -->

    <!-- North approach flows -->
    <flow id="flow_NS" type="car" route="route_NS" begin="0" end="3600" probability="0.06"/> <!-- straight -->
    <flow id="flow_NE" type="car" route="route_NE" begin="0" end="3600" probability="0.02"/> <!-- right -->
    <flow id="flow_NW" type="car" route="route_NW" begin="0" end="3600" probability="0.02"/> <!-- left -->

    <!-- South approach flows -->
    <flow id="flow_SN" type="car" route="route_SN" begin="0" end="3600" probability="0.06"/> <!-- straight -->
    <flow id="flow_SE" type="car" route="route_SE" begin="0" end="3600" probability="0.02"/> <!-- left -->
    <flow id="flow_SW" type="car" route="route_SW" begin="0" end="3600" probability="0.02"/> <!-- right -->

    <!-- East approach flows -->
    <flow id="flow_EW" type="car" route="route_EW" begin="0" end="3600" probability="0.03"/> <!-- straight -->
    <flow id="flow_EN" type="car" route="route_EN" begin="0" end="3600" probability="0.01"/> <!-- left -->
    <flow id="flow_ES" type="car" route="route_ES" begin="0" end="3600" probability="0.01"/> <!-- right -->

    <!-- West approach flows -->
    <flow id="flow_WE" type="car" route="route_WE" begin="0" end="3600" probability="0.03"/> <!-- straight -->
    <flow id="flow_WN" type="car" route="route_WN" begin="0" end="3600" probability="0.01"/> <!-- right -->
    <flow id="flow_WS" type="car" route="route_WS" begin="0" end="3600" probability="0.01"/> <!-- left -->
</routes>
